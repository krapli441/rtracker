{
  "name": "rtracker",
  "version": "1.0.0",
  "description": "복싱 링 소리를 감지하여 영상을 자동으로 분할하는 도구",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"nodemon --exec electron .\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krapli441/rtracker.git"
  },
  "keywords": [
    "boxing",
    "video",
    "segmentation",
    "audio-analysis",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krapli441/rtracker/issues"
  },
  "homepage": "https://github.com/krapli441/rtracker#readme",
  "dependencies": {
    "electron-builder": "^23.6.0",
    "fft-js": "^0.0.12",
    "fluent-ffmpeg": "^2.1.2",
    "waveform-data": "^4.3.0",
    "web-audio-api": "^0.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.3.0",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.rtracker.app",
    "productName": "RTracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Video"
    }
  }
}
